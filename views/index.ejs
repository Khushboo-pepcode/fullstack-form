<!DOCTYPE html>
<html>
<head>
	<title>Login page</title>
	<!-- font awesome -->
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
	<!-- bootstrap -->
	<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<!-- css file -->
	<link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
    <section class="main-wrapper">
        <div class="container">
            <section class="form">
                <div class="in-form">
                    <div class="main-heading">
                        <h1>Form Page</h1>
                    </div>
                    <input type="hidden" id="Id" name="Id" value=""/>
                    <form id="form">
                        <ul class="is-flex-column list">
                            <li class="is-flex-column"></li>
                            <li class="is-flex-column"> <label for="name">Name  </label>
                                <input type="text" id="name" name="name" required /></li>
                            <li class="is-flex-column"><label for="email">Email</label>
                                <input type="email" id="email" name="email" required /></li>
                            <li class="is-flex-column"><label for="mobile">Mobile No.</label>
                                <input type="tel" id="mobile" name="mobile" required /></li>
                            <li class="is-flex-column">
                                <label for="subject">Subject</label>
                                <select name="subject" id="subject">
                                    <option value="select">Select Subject</option>
                                    <option value="btech">B.tech</option>
                                    <option value="mtech">M.tech</option>
                                    <option value="bca">BCA</option>
                                    <option value="mca">MCA</option>
                                    <option value="bcom">B.com</option>
                                    <option value="mcom">M.com</option>
                                </select>
                            </li>
                            <li>
                                <ul class="is-flex list">
                                    <li> <button  id="submit" class="red-button" >Submit</button></li>
                                    <li><button  id="reset" class="green-button">Reset</button></li>
                                    <li><button  id="update" class="blue-button">Update</button></li>
                                </ul>
                            </li>
                        </ul>
                    </form>
                </div>
            </section>
            <section class="table">
                <div class="in-table">
                    <table id="data">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile No</th>
                                <th>Subject</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            
                        <% for(let id=0; id<data.length; id++) { %>
                            <tr>
                                <td ><%= data[id].ID %></td>
                                <td><%= data[id].name %></td>
                                <td><%= data[id].email %></td>
                                <td><%= data[id].mobile %></td>
                                <td><%= data[id].subject %></td>
                                <td><button onClick="myEdit('<%= JSON.stringify(data[id]) %>')" class="red-button" id="edit"><i class="fas fa-edit"></i></button> <span><button onclick="myDelete('<%= data[id].ID %>')" class="blue-button" id="delete"><i class="fas fa-trash-alt"></i></button></td>
                            </tr>
                        <% } %>
                    </tbody>
                    </table>
                </div>
            </section>
        </div>
    </section>
<script src="script.js">
</script>
</body>
</html>